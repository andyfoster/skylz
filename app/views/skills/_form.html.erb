  <% if skill.errors.any? %>
    <div
      id="error_explanation"
      class="px-3 py-2 mt-3 font-medium text-red-500 rounded-lg bg-red-50"
    >
      <h2><%= pluralize(skill.errors.count, "error") %>
        prohibited this skill from being saved:</h2>
      <ul>
        <% skill.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-5 mb-5" data-controller="skill-form">

  <%# Needs to be outside the form or clicking this submits the form - turbo? %>
  <button data-action="skill-form#generate" class="border-2 border-indigo-200 rounded p-3">âœ¨ Generate Draft with AI</button>

<%= form_with(model: skill, class: "contents") do |form| %>

    <div class="mb-6">
      <%= form.label :name,
                 class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.text_field :name,
                      class:
                        "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-lg rounded-lg block w-full p-2.5",
                      required: true,
                      data: { skill_form_target: "skillNameInput" }
                      %>
    </div>

    <div class="mb-6">
      <%= form.label :reason,
                 "When to use",
                 class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.text_field :reason,
                      class:
                        "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-lg rounded-lg block w-full p-2.5",
                      data: { skill_form_target: "skillReasonInput" }
                        %>
    </div>

    <div class="mb-6">
      <%# Short note about markdown with a link to a cheatsheet %>
       <%= link_to "Markdown Cheatsheet", "https://simplemde.com/markdown-guide", class: "text-sm underline text-violet-500", target: "_blank" %>
      <%= form.label :notes,
                 class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.text_area :notes,
                     placeholder: "",
                     id: "notesTextarea",
                     class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-lg rounded-lg block w-full p-2.5",
                     data: {
                       controller: "textarea-autogrow",
                       skill_form_target: "skillNotesInput"
                     } %>

    </div>

    <div class="mb-6">
      <%= form.label :steps,
                 class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>

      <%= form.text_area :steps,
                     id: "stepsTextarea",
                     class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-lg rounded-lg block w-full p-2.5",
                     placeholder:
                       "* Start section header\nPut each step\nOn a separate line\n*Section 2\nLike so",
                     data: {
                      controller: "textarea-autogrow",
                      skill_form_target: "skillStepsInput"
                     } %>

    </div>

    <div class="mb-6 flex justify-between">

    <div class="inline-block w-1/3">
    <%= form.label :tags,
                 class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.text_field :tags,
                      placeholder: "tag one, tag two, tag three",
                      class: "shadow-sm border border-gray-300 text-gray-900 text-lg rounded-lg block w-full p-2.5",
                      data: { skill_form_target: "skillTagsInput" }
                      %>
    </div>
    <div class="inline-block w-1/3">
     <% if current_user.skillsets.count > 1 %>
        <%= form.label :skillset_id,
                   class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
        <%= form.select :skillset_id,
                    current_user.skillsets.collect { |d| [d.name, d.id] },
                    selected: @skillset.id,
                    class:
                      "block w-full p-2 mb-6 text-lg text-gray-900 border border-gray-300 rounded-lg bg-gray-50" %>
      <% else %>
        <%= form.hidden_field :skillset_id, value: @skillset.id %>
      <% end %>
    </div>


    </div>

    <div class="mb-6 flex">
      <div class="w-1/3">
      <%= form.submit class:
                  "inline-flex items-center bg-indigo-500 px-4 py-2 text-base font-medium rounded-lg text-white cursor-pointer" %>

      </div>
    </div>

  </div>


<% end %>
