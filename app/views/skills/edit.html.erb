<div class="w-full mx-auto">

  <div>
    <h1 class="inline-block text-4xl font-bold">Edit</h1>
    <%= link_to "Back", @skill, class: "ml-2 rounded-lg py-3 px-5 inline-block font-medium float-right" %>
  </div>

  <%= render "form", skill: @skill %>

  <div class="mt-5">
    <%= link_to "Delete this skill",
    @skill,
    data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
    class: "text-red-500 underline font-semibold" %>
  </div>

</div>
