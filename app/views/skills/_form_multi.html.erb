<%= form_with(model: skill, url: create_multi_path, class: "contents") do |form| %>
  <% if skill.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(skill.errors.count, "error") %> prohibited this skill from being saved:</h2>

      <ul>
        <% skill.errors.each do |error| %>
          <li class="opacity-0 transition-opacity duration-300"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-5">
    <%= form.label :name, class: ""%><br />
    <%= form.text_area :name, class: "w-full rounded-sm focus:ring-1 focus:ring-indigo-900 caret-indigo-900" %><br />
    <br />
    <%= form.label :tags, class: "" %><br />
    <%= form.text_field :tags, placeholder: "separate, tags with, commas", class: "w-full" %>
    <% if current_user.domains.count > 1 %>
      <%= form.label :domain_id, class: "" %><br />
      <%= form.select :domain_id, current_user.domains.collect {|d| [ d.name, d.id ] }, :selected => @domain.id, class: "w-full" %>
    <% else %>
      <%= form.hidden_field :domain_id, value: @domain.id %>
    <% end %>
    
  </div>


  <div class="inline">
    <%= form.submit class: "btn-primary" %>
  </div>

  <% end %>
  
