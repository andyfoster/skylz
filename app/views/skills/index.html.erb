<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg 
    inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl dark:text-violet-600">Your Skills
      <% if !@domain.name.empty? %>for <%= @domain.name %><% end %>
      </h1>
    <%= link_to 'New skill', new_skill_path, class: "rounded-lg py-3 px-5 
    bg-blue-600 text-white block font-medium drop-shadow-lg" %>
  </div>

  <% Skill.where(user_id: current_user.id, domain_id: @domain.id).pluck(:tags).join(",").split(",").uniq.each do |tag| %>
    <span class="bg-blue-100 text-blue-800 text-xs font-semibold 
        mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 
        dark:text-blue-800 ml-3 hover:text-blue-100 
        hover:bg-blue-800 hover:cursor-pointer 
        dark:bg-indigo-800 dark:text-purple-400">
        <a href="/s/<%= tag.strip %>"><%= tag.strip %></a>
        </span>
  <% end %>

<div class="flex">
    <div aria-label="group of cards" tabindex="0" class="focus:outline-none py-8 w-full md:w-1/2 lg:w-1/3">
      <%= render @skills %>
    </div>
</div>
