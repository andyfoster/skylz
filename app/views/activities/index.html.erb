<div class="w-full">
  <% if notice.present? %>
    <%# <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %>
  <% end %>

  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold  mt-4">Activity Log</h1>
    <!-- TODO: Add modal popup to add an activity for any skill -->
  </div>

  <div class="overflow-x-auto mt-3 bg-white rounded p-4 shadow-lg">
    <table class="min-w-full divide-y-2 divide-gray-200 bg-white text-sm ">
      <thead class="">
      <tr>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
          Skill
        </th>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
          Reps
        </th>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
          Notes
        </th>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
          Date
        </th>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
          Type
        </th>
        <th class="px-4 py-2"></th>
      </tr>
      </thead>

      <tbody class="divide-y divide-gray-200">

      <% @activities.reverse.each do |activity| %>
        <tr>
          <td class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
            <%= link_to activity.skill.name, skill_path(activity.skill), class: "font-semibold text-lg hover:underline" %>
          </td>
          <td class="whitespace-nowrap px-4 py-2 text-gray-700"><%= activity.reps %>x</td>
          <td class="whitespace-nowrap px-4 py-2 text-gray-700"><%= activity.description %></td>
          <td class="whitespace-nowrap px-4 py-2 text-gray-700"><%= activity.date.strftime("%a, %e %b %Y") %></td>
          <td class="whitespace-nowrap px-4 py-2 text-gray-700"><%= activity.activity_type %></td>
          <td class="whitespace-nowrap px-4 py-2">
            <%= link_to "edit", edit_skill_activity_path(activity.skill, activity), class: "inline-block rounded bg-indigo-600 px-4 py-2 text-xs font-medium text-white hover:bg-indigo-700" %>
          </td>
        </tr>
      <% end %>

      </tbody>
    </table>
  </div>
</div>

