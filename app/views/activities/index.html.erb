<div class="w-full">
  <% if notice.present? %>
    <%# <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %>
  <% end %>

  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">Activities for <%= @domain.name %></h1>
    <!-- TODO: Add modal popup to add an activity for any skill -->
  </div>

  <div id="activities-table" class="min-w-full">
        <table class="border-black ">
          <tr>
            <th>Skill</th>
            <th></th>
            <th>Notes</th>
            <th>Info</th>
          </tr>
          <% @activities.each do |activity| %>
            <tr class="border-t border-b border-black">
              <td><%= link_to activity.skill.name, skill_path(activity.skill), class: "text-indigo-500 text-xl font-bold" %></td>
              <td><%= activity.reps %>x</td>
              <td><%= activity.description %></td>
              <td class="text-xs italic text-gray-500">
                <%= activity.date.strftime("%a, %e %b %Y") %><br><%= activity.activity_type %>
                <br>
                <%= link_to "edit", edit_skill_activity_path(activity.skill, activity), class: "hover:font-bold" %>
              </td>
            </tr>
          <% end %> 
        </table>
  </div>

  <div>
    <% @activities.each do |activity| %>
    <div class="p-5 mb-3 border border-2 border-indigo-900">
    <div class="w-full">
      <span class="inline-block w-1/3 pr-5 mb-3 text-xl font-bold"><%= activity.skill.name %></span>
      <span class="inline-block w-1/3 mb-3 text-xl"><%= activity.description %></span>
    </div>
      <div class="mt-3 text-xs">
        <em><%= activity.date.strftime("%a, %e %b %Y") %> -
          <span class="inline leading-3 text-orange-900 text-md">
            <%= activity.activity_type %>
          </span>
          <span class="ml-5 text-indigo-900"><%= activity.reps %>x</span>
        </em>
        <%= link_to "edit", edit_skill_activity_path(activity.skill, activity), class: "float-right hover:font-bold" %>
      </div>
    </div>
    <% end %>
  </div>
  <br>


  <div id="activities" class="min-w-full">
    <% @activities.each do |a| %>

      <div class="my-3">
        <%= link_to a.skill.name, skill_path(a.skill), class: "underline text-purple-500" %>
        <div class="">
          <div class="inline"><%= a.description %></div>
          <div class="inline italic text-gray-500"><%= a.date %> - <%= a.reps %>x - <%= a.activity_type %></div>
        </div>
      </div>

    <% end %>
  </div>
</div>
