<div class="w-full">
  <% if notice.present? %>
    <%# <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %>
  <% end %>

  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">Activity Log</h1>
    <!-- TODO: Add modal popup to add an activity for any skill -->
  </div>

  <div id="activities-table" class="min-w-full mt-3">
        <table class="border-black ">
          <tr>
            <th>Skill</th>
            <th></th>
            <th>Notes</th>
            <th>Info</th>
          </tr>
          <% @activities.reverse.each do |activity| %>
            <tr class="border-t border-b border-black">
              <td><%= link_to activity.skill.name, skill_path(activity.skill), class: "font-semibold" %></td>
              <td><%= activity.reps %>x</td>
              <td><%= activity.description %></td>
              <td class="text-xs italic text-gray-500">
                <%= activity.date.strftime("%a, %e %b %Y") %><br>
              <span class="inline leading-3 text-orange-900 text-md">
                <%= activity.activity_type %>
              </span>
                <br>
                <%= link_to "edit", edit_skill_activity_path(activity.skill, activity), class: "font-semibold hover:font-bold" %>
              </td>
            </tr>
          <% end %> 
        </table>
  </div>
</div>

