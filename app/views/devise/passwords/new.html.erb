    <div class="w-full max-w-sm mx-auto overflow-hidden bg-white rounded-lg shadow-md dark:bg-gray-800">
      <div class="px-6 py-4">
        <h3 class="mt-1 text-xl font-medium text-center text-gray-600 dark:text-gray-200">Forgot your password?</h3>

        <p class="mt-1 text-center text-gray-500 dark:text-gray-400">Enter your email address here</p>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="w-full mt-4">
            <%= f.email_field :email, placeholder: "Email Address", class: "block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-500 bg-white border rounded-md dark:bg-gray-800 dark:border-gray-600 dark:placeholder-gray-400 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring focus:ring-blue-300", autofocus: true, autocomplete: "email" %>
          </div>

          <div class="flex items-center justify-between mt-4">
            <%= f.submit "Send me reset password instructions", class: "px-4 py-2 leading-5 text-white transition-colors duration-200 transform bg-gray-700 rounded hover:bg-gray-600 focus:outline-none" %>

          </div>
      </div>

      <div class="flex items-center justify-center py-4 text-center bg-gray-50 dark:bg-gray-700">
        <span class="text-sm text-gray-600 dark:text-gray-200">Don't have an account? </span>

        <%= link_to 'Register', new_user_registration_path, class: "mx-2 text-sm font-bold text-blue-500 dark:text-blue-400 hover:underline" %>
      </div>
    </div>

    <% end %>
