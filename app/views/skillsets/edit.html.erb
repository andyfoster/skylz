<div class="w-full mx-auto md:w-2/3">
  <h1 class="inline-block text-4xl font-bold">Editing skillset</h1>

  <%= render "form", skillset: @skillset %>

  <div class="mt-10">
    <% if current_user.current_skillset != @skillset.id %>
      <%= button_to "Delete #{@skillset.name}", skillset_path(@skillset), method: :delete, form_class: "inline-block", class: "py-3 px-5 bg-red-500 text-white rounded-md inline-block font-medium" %>
    <% else %>
      <p class="text-red-500">You can't delete your current skillset. <br>
      If you wish to delete this skillset, switch to another skillset and try again.</p>
    <% end %>
  </div>

</div>
