    <% if user_signed_in? && current_user.is_admin? %>
    <li>
        <%= link_to rails_admin_path, class: "flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group" do %>
