<div id="<%= dom_id domain %>" class="flex justify-between w-full">

  <p class="inline-block my-5">
    <%= link_to edit_domain_path(domain) do %>
      <span class="p-3 rounded-lg hover:bg-indigo-900 hover:text-white"><%= fa_icon "pencil", class: ""%></span>
    <% end %>
    <% if current_user.current_domain != domain.id %>
      <%= link_to 'Switch to', set_domain_path(domain.id), class: "font-bold border p-2 rounded-lg b-1 border-indigo-900" %>
    <% else %>
      <%= content_tag :span, 'Currrent Domain: ', class: "font-bold" %>
    <% end %>
    <%= domain.name %>
  </p>

  <% if action_name != "show" %>
  <div class="inline-block float-right">

<!--    <% if current_user.current_domain != domain.id %>
    <%= link_to 'Set current', set_domain_path(domain.id), class: "btn-primary" %>
    <% end %>
-->
  </div>


  <hr class="mt-6">
  <% end %>
</div>
