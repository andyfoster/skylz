<div id="<%= dom_id domain %>">

  <p class="my-5 inline-block">
    <%= domain.name %>
  </p>

  <% if action_name != "show" %>
  <div class="float-right inline-block">
    <%= link_to "Rename #{domain.name}", edit_domain_path(domain), class: "rounded-lg py-3 ml-2 px-5 text-blue-600 inline-block font-medium" %>
    <% if current_user.current_domain != domain.id %>
      <%= link_to 'Set current domain', set_domain_path(domain.id), class: "rounded-lg py-3 ml-2 px-5 bg-indigo-900 text-white inline-block font-medium" %>
      <%= button_to "Delete #{domain.name} and all my skills", domain_path(domain), method: :delete, form_class: "inline-block", class: "rounded-lg py-3 ml-2 px-5 text-red-500 inline-block font-medium" %>
    <% end %>  
  </div>


    <hr class="mt-6">
  <% end %>
</div>
