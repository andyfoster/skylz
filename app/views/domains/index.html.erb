<div class="w-full mt-2">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex items-center justify-between mb-5">
    <h1 class="text-4xl font-bold">Your Skill Domains</h1>
    <%= link_to 'New domain', new_domain_path, class: "btn-primary" %>
  </div>

  <div id="domains" class="min-w-full">
    <%= render @domains %>
  </div>
</div>
