<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-5">
    <h1 class="font-bold text-4xl">Your Skill Domains</h1>
    <%= link_to 'New domain', new_domain_path, class: "btn-create" %>
  </div>

  <div id="domains" class="min-w-full">
    <%= render @domains %>
  </div>
</div>
